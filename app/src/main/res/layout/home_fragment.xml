<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.will_russell.smartmealplanner.HomeFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mealTitleCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:layout_marginBottom="@dimen/mtrl_card_spacing"
        android:minHeight="100dp"
        android:padding="8dp"
        android:paddingTop="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">
        <TextView
            android:id="@+id/mealTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Meals for Today"
            android:textSize="16sp" />
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="116dp">
        </ListView>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ingredientListCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:layout_marginBottom="@dimen/mtrl_card_spacing"
        android:minHeight="100dp"
        android:padding="8dp"
        android:paddingTop="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:text="Shopping List"
            android:textSize="16sp" />
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="116dp">
        </ListView>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/expiryDateCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:layout_marginBottom="@dimen/mtrl_card_spacing"
        android:minHeight="100dp"
        android:padding="8dp"
        android:paddingTop="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:text="Ingredients going off"
            android:textSize="16sp" />
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="116dp">
        </ListView>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>